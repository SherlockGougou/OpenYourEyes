<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cc.shinichi.openyoureyes">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      tools:replace="android:allowBackup"
      android:name="cc.shinichi.openyoureyesmvp.app.App"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning">
    <activity
        android:name="cc.shinichi.openyoureyesmvp.app.Welcome"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.FullScreenTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.home.HomeView"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.other.Browser"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.ranklist.RankList"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.video.VideoDetail"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.FullScreenTheme">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.category.AllCategoryView"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.campaignlist.CampaignList"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.other.AllPgcs"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.tagcategory.TagCategory"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.userinfo.UserInfo"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>
</manifest>
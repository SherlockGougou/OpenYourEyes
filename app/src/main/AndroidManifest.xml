<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.shinichi.openyoureyes">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name="cc.shinichi.openyoureyesmvp.app.App"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.Welcome"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.FullScreenTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.module.home.HomeView"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.Browser"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.RankList"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.VideoDetail"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.FullScreenTheme">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.AllCategory"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.CampaignList"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.AllPgcs"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.TagCategory"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name="cc.shinichi.openyoureyesmvp.common.activity.UserInfo"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>
</manifest>